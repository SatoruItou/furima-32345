<%= render "shared/header" %>
<div class='registration-main'>
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの登録情報"%>
      </h2>
      <table class="table">
        <tbody>
        <tr>
          <th class="table__col1">ニックネーム</th>
          <td class="table__col2"><%= @user.nickname %>
        </tr>
        <tr>
          <th class="table__col1">カナ名</th>
          <td class="table__col2"> <%= @user.last_name_kana %><%= @user.first_name_kana%></td>
        </tr>
        <tr>
          <th class="table__col1">名前</th>
          <td class="table__col2"><%= @user.last_name%><%= @user.first_name %></td>
        </tr>
        <tr>
          <th class="table__col1">生年月日</th>
          <td class="table__col2"><%= @user.birth %>
        </tr>
        </tbody>
     </table>
     <h2 class="page-heading">
    
      </h2>
      <div class="user__card">
      </div>
    </div>
  </div>
  
</div>
<%= render "shared/footer" %>