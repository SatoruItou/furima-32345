<%= render "shared/header" %>
<div class='registration-main'>
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの登録情報"%>
      </h2>
      <h3 class="form-header-text">
      <%= link_to "ユーザー情報を編集する", edit_user_path(current_user)  %>
      </h3>
      <table class="table">
        <tbody>
        <tr>
          <th class="table__col1">ニックネーム</th>
          <td class="table__col2"><%= @user.nickname %>
        </tr>
        <tr>
          <th class="table__col1">カナ名</th>
          <td class="table__col2"> <%= @user.last_name_kana %><%= @user.first_name_kana%></td>
        </tr>
        <tr>
          <th class="table__col1">名前</th>
          <td class="table__col2"><%= @user.last_name%><%= @user.first_name %></td>
        </tr>
        <tr>
          <th class="table__col1">生年月日</th>
          <td class="table__col2"><%= @user.birth %>
        </tr>
        </tbody>
     </table>
     <h2 class="form-header-text">出品リスト</h2>
    <ul class='item-lists'>

      <%  @items.each do |item|%>
      <li class='list'>
        <%= link_to item_path(item.id) do %>
        <div class='item-img-content'>
          <%=  image_tag(item.image, class: "item-img") %>

         
          <% if item.purchase != nil %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <% end %>
        
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= item.name %>
          </h3>
          <div class='item-price'>
            <span><%= item.price %>円<br><%= item.shipping.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
       <% end %>
    </div>
  </div>
  
</div>
<%= render "shared/footer" %>